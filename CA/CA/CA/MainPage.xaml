<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CA"
             x:Class="CA.MainPage">

    <StackLayout>
        <Entry x:Name="email" Placeholder="user name" />
        <Entry x:Name="password" Placeholder="user password" IsPassword="true" />
        <Button Text="SignIn" x:Name="btnlogin" Clicked="Btnlogin_OnClicked"/>
    </StackLayout>

</ContentPage>